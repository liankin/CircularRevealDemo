<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_container"
    android:background="@android:color/transparent">
    <TextView
        android:id="@+id/btn_ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广告"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:transitionName="@string/btn_fab_transition_name"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/bg_circul"/>
    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_big_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_image2"
            android:visibility="gone"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#aab6b5b5"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:text="蛋糕饼干奶油面包~~~"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:visibility="gone"
            android:src="@mipmap/ic_launcher_round" />
    </RelativeLayout>
</RelativeLayout>